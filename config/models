User
    ident Text
    password Text Maybe
    UniqueUser ident
    deriving Typeable

--Email
--    email Text
--    user UserId Maybe
--    verkey Text Maybe
--    UniqueEmail email

 -- By default this file is used in Model.hs (which is imported by Foundation.hs)

Category json
    name String
    parent CategoryId Maybe sqltype=int
    UniqueName name
    deriving Show

PhotoCategory
    category CategoryId sqltype=int
    photo PhotoId sqltype=int
    UniquePhotoCategory category photo

Photo json
    name String
    src String
    thumb String Maybe
    width Int
    height Int
    exif Text
    views Int
    deriving Show

Translation json
    language Language sqltype=ENUM('En','Ru')
    type TranslationType sqltype=ENUM('CategoryType','PhotoType')
    refId Int64
    field String
    value String
    UniqueTranslation language type refId field
    deriving Show
