{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"],
      "@assets/*": ["assets/*"]
    },
    "lib": [
      "dom",
      "es6"
    ]
  },
  "exclude": [
    "node_modules",
    "etc"
  ],
  "include": [
      "./migration/**/*",
      "./src/**/*",
      "./typings/*"
  ],
}
