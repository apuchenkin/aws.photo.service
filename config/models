User
    ident Text
    password Text Maybe
    UniqueUser ident
    deriving Typeable

--Email
--    email Text
--    user UserId Maybe
--    verkey Text Maybe
--    UniqueEmail email

 -- By default this file is used in Model.hs (which is imported by Foundation.hs)

Category json
    name String
    parent CategoryId Maybe
    UniqueName name
    deriving Show

PhotoCategory
    category CategoryId
    photo PhotoId
    UniquePhotoCategory category photo

Author json
    name String
    UniqueAuthor name
    deriving Show

Photo json
    name String
    src String
    thumb String Maybe
    width Int
    height Int
    exif Text
    views Int
    author AuthorId Maybe
    deriving Show

Translation json
    language Language sqltype=enum('Ru','En')
    type TranslationType sqltype=enum('CategoryType','PhotoType')
    refId Int64
    field String
    value String
    UniqueTranslation language type refId field
    deriving Show
